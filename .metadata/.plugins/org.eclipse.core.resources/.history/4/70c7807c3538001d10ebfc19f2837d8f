package Practise;

public class Pattern2 {

	public static void main(String[] args) {

		for(int i=0;i<=4;i++)
		{
			for(int j=0;j<=8;j++)
			{
				if(i+j>=4 && j-i<=4)
				{
					System.out.print("*");
				}
				else
				{
					System.out.print(" ");
				}
			}
			System.out.println();
		}
		
		
		
		for(int i=0;i<=4;i++)
			{
				for(int j=0;j<=4;j++)
				{
					if(i+j>=4 )
					{
						System.out.print("* ");
					}
					else
					{
						System.out.print(" ");
					}
				}
				System.out.println();
			}
		
		System.out.println("pattern 2     __________");
		for(int i=0;i<=4;i++)
		{
			for(int j=0;j<=4;j++)
			{
				if(j+i>=4)
				{
					System.out.print("*");
				}
				else
				{
					System.out.print("");
				}
			}
			System.out.println();
		}
		
		System.out.println("pattern 2     __________");
		for(int i=0;i<=4;i++)
		{
			for(int j=0;j<=4;j++)
			{
				if(j-i>=0)
				{
					System.out.print("*");
				}
				else
				{
					System.out.print("");
				}
			}
			System.out.println();
		}
		
		System.out.println("pattern 4---------------------------------------------- ");

		for(int i=0;i<=8;i++)
		{
			for(int j=0;j<=8;j++)
			{
				if(j-i>=0 && j+i<=8 )
				System.out.print("*");
				else
				{
					System.out.print(" ");
				}
			}
			System.out.println();
				
		}
		
		System.out.println("------------------------");
		for(int i=0;i<=20;i++)
		{
			for(int j=0;j<=10;j++)
			{
				if(j-i>=5 || j+i<=5)
				System.out.print("*");
				else
				{
					System.out.print(" ");
				}
			}
			System.out.println();
				
		}
		
		
		System.out.println("------------------------");
		for(int i=0;i<=8;i++)
		{
			for(int j=0;j<=8;j++)
			{
				if(j-i>=0 && j<=4 || j-i<=0 && j>=4)
				System.out.print("*");
				else
				{
					System.out.print(" ");
				}
			}
			System.out.println();
				
		}
		
		System.out.println("------------------------");
		for(int i=0;i<=8;i++)
		{
			for(int j=0;j<=8;j++)
			{
				if(j-i>=0 && j<=4)
				System.out.print((char)(j+65));
				else
				{
					System.out.print(" ");
				}
			}
			System.out.println();
				
		}
		
		
		
		System.out.println("------------------------");
		for(int i=0;i<=8;i++)
		{
			for(int j=0;j<=20;j++)
			{
				if(j==0 || (i==0 && j!=5))
				System.out.print("*");
				else
				{
					System.out.print(" ");
				}
			}
			System.out.println();
				
		}
		
		
	}

}
