package Practise;

public class ReverseStringCharArray {

	public static void main(String[] args) {

		String str = "i am goo";
		
		String sa[] =str.split(" ");
		
		char ch[] = str.toCharArray();
		
		int i=0;
		int j=ch.length-1;
		
			while(i<j)
			{
				char temp = ch[i];
				     ch[i]=ch[j];
				     ch[j]=ch[i];
				     i++;
				     j--;
			}
			
         for (int j2 = 0; j2 < ch.length; j2++) {
			
        	 System.out.println(ch);
		}
	}

}
